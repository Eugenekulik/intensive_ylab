<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd"
        logicalFilePath="db/changelog.xml">
    <changeSet id="001-initial-schema.xml" author="Eugene Kulik">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="role" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="address">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="region" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="district" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="house" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="apartment" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="address" columnNames="region, district, city, street, house, apartment"/>
        <createTable tableName="agreement">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="agreement" baseColumnNames="user_id"
                                 constraintName="fk_user_to_agreement"
                                 referencedTableName="users" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="agreement" baseColumnNames="address_id"
                                 constraintName="fk_address_to_agreement"
                                 referencedTableName="address" referencedColumnNames="id"/>
        <addUniqueConstraint columnNames="user_id, address_id" tableName="agreement"/>
        <createTable tableName="meters_type">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(128)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="meters_data">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="meters_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="agreement_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="placed_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="user_sequence" startValue="100" incrementBy="1"/>
        <createSequence sequenceName="address_sequence" startValue="100" incrementBy="1"/>
        <createSequence sequenceName="agreement_sequence" startValue="100" incrementBy="1"/>
        <createSequence sequenceName="meters_data_sequence" startValue="100" incrementBy="1"/>
        <createSequence sequenceName="meters_type_sequence" startValue="100" incrementBy="1"/>
    </changeSet>
</databaseChangeLog>